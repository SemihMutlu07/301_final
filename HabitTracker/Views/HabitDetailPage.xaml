<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HabitTracker.Views.HabitDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Habit Details"
    BackgroundColor="#0a0a0a">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- habit name -->
            <Label x:Name="NameLabel" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,10,0,0"/>

            <!-- streak card -->
            <Frame BackgroundColor="#1a1a1a" 
                   BorderColor="Transparent"
                   CornerRadius="16"
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ”¥ Current Streak" 
                           FontSize="14"
                           TextColor="#999"
                           FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="8">
                        <Label x:Name="StreakLabel" 
                               FontSize="48" 
                               FontAttributes="Bold"
                               TextColor="#ff6b6b"
                               VerticalOptions="Center"/>
                        <Label Text="days" 
                               FontSize="20"
                               TextColor="#666"
                               VerticalOptions="End"
                               Margin="0,0,0,8"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- son 7 gÃ¼n -->
            <Frame BackgroundColor="#1a1a1a" 
                   BorderColor="Transparent"
                   CornerRadius="16"
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Last 7 Days" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <HorizontalStackLayout x:Name="Last7Container" 
                                          Spacing="8"
                                          HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- aylÄ±k takvim -->
            <Frame BackgroundColor="#1a1a1a" 
                   BorderColor="Transparent"
                   CornerRadius="16"
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Button Text="â—€" 
                                Clicked="OnPrevMonthClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                FontSize="20"
                                Padding="0"
                                WidthRequest="40"/>
                        <Label x:Name="MonthLabel" 
                               Text="January 2026"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"
                               WidthRequest="150"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="â–¶" 
                                Clicked="OnNextMonthClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                FontSize="20"
                                Padding="0"
                                WidthRequest="40"/>
                    </HorizontalStackLayout>

                    <!-- Day Headers -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto" Margin="0,8,0,0">
                        <Label Grid.Column="0" Text="Mon" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                        <Label Grid.Column="1" Text="Tue" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                        <Label Grid.Column="2" Text="Wed" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                        <Label Grid.Column="3" Text="Thu" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                        <Label Grid.Column="4" Text="Fri" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                        <Label Grid.Column="5" Text="Sat" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                        <Label Grid.Column="6" Text="Sun" FontSize="12" TextColor="#666" HorizontalOptions="Center"/>
                    </Grid>

                    <!-- calendar gridi-->
                    <Grid x:Name="CalendarGrid" 
                          ColumnDefinitions="*,*,*,*,*,*,*"
                          RowSpacing="8"
                          ColumnSpacing="8"/>
                </VerticalStackLayout>
            </Frame>

            <!-- 30 gÃ¼n kÄ±smÄ±-->
            <Frame BackgroundColor="#1a1a1a" 
                   BorderColor="Transparent"
                   CornerRadius="16"
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Last 30 Days" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <ProgressBar x:Name="Rate30Bar" 
                                HeightRequest="8"
                                ProgressColor="#4ade80"/>
                    <HorizontalStackLayout Spacing="8">
                        <Label x:Name="Rate30Text" 
                               FontSize="14" 
                               TextColor="#999"/>
                        <Label Text="completion rate" 
                               FontSize="14"
                               TextColor="#666"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>