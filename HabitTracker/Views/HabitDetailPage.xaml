<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HabitTracker.Views.HabitDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Habit">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="NameLabel" FontSize="28" />

        <Frame>
            <VerticalStackLayout Spacing="8">
                <Label Text="Current streak" />
                <Label x:Name="StreakLabel" FontSize="24" />
            </VerticalStackLayout>
        </Frame>

        <Frame>
            <VerticalStackLayout Spacing="10">
                <Label Text="Completion Rate"/>

                <Label Text="Last 7 Days" FontAttributes="Bold" FontSize="12" />
                <HorizontalStackLayout x:Name="Last7Container" Spacing="6"/>

                <Label Text="Last 30 days" FontAttributes="Bold" FontSize="12"/>
                <!-- İstersen sonra açarsın -->
                <!--
                <ProgressBar x:Name="Rate30Bar" HeightRequest="8" />
                <Label x:Name="Rate30Text" FontSize="12" Opacity="0.8"/>
                -->
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
