<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Views.TodayPage"
             Title="Today">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Today" FontSize="28" />

        <Label x:Name="ProgressLabel"
               Text="Done: 0/0"
               FontSize="16"
               Margin="0,0,0,8"/>

        <VerticalStackLayout x:Name="EmptyContainer"
                             IsVisible="False"
                             Spacing="16"
                             HorizontalOptions="Center"
                             Margin="0, 60, 0, 0">
            <Label Text="No habits yet!"
                   FontSize="20"
                   HorizontalOptions="Center"/>
            <Label Text="Start building good habits today"
                   FontSize="14"
                   Opacity="0.7"
                   HorizontalOptions="Center"/>
            <Button Text="Add Your First Habit"
                    Clicked="OnAddHabitClicked"
                    BackgroundColor="#6366f1"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="20,12"/>
        </VerticalStackLayout>
        <CollectionView x:Name="TodayList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                        <CheckBox Grid.Column="0" IsChecked="{Binding IsDone}" CheckedChanged="OnDoneChanged"/>
                        <Label Grid.Column="1" Text="{Binding Name}" VerticalOptions="Center" LineBreakMode="TailTruncation"/>
                        <Button Grid.Column="2" Text=">" Clicked="OnOpenDetailClicked"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>